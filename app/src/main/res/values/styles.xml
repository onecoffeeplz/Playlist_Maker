<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SettingsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:layout_height">@dimen/settings_menu_height</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textSize">@dimen/settings_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SearchBarET">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/searchbar_height</item>
        <item name="android:background">@drawable/rounded_edittext_background</item>
        <item name="android:layout_marginHorizontal">@dimen/padding_16</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:drawableStart">@drawable/ic_searchbar</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
        <item name="android:paddingHorizontal">@dimen/padding_16</item>
        <item name="android:textColorHint">@color/search_icon</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textCursorDrawable">@drawable/colorized_cursor</item>
    </style>

    <style name="SearchBarClearBTN">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:layout_marginEnd">@dimen/padding_16</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchResultTrackName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/settings_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_result_track_name_text</item>
    </style>

    <style name="SearchResultArtist">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/icon</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_result_artist_text</item>
    </style>

    <style name="SearchAdditionalInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/icon_search</item>
        <item name="android:textSize">@dimen/search_additional_info_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingHorizontal">@dimen/padding_24</item>
    </style>

    <style name="SearchHistory">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/search_history_height</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/icon_search</item>
        <item name="android:textSize">@dimen/search_additional_info_text</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SearchButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/icon_search</item>
        <item name="android:textColor">@color/search_background</item>
        <item name="android:textSize">@dimen/search_button_text</item>
        <item name="cornerRadius">54dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="PlayerTrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/player_track_name_text</item>
        <item name="android:textColor">@color/player_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlayerArtistName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/player_artist_name_text</item>
        <item name="android:textColor">@color/player_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="PlayerDetailsKey">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/player_details_text</item>
        <item name="android:textColor">@color/player_details_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_32</item>
    </style>

    <style name="PlayerDetailsValue">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/player_details_text</item>
        <item name="android:textColor">@color/player_text_color</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="MediaTabLayout">
        <item name="android:background">@color/media_background</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/player_artist_name_text</item>
        <item name="tabTextColor">@color/media_text_color</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/media_text_color</item>
        <item name="tabTextAppearance">@style/MediaTabTextAppearance</item>
    </style>

    <style name="MediaTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavigationMenu">
        <item name="itemIconTint">@color/menu_selector_color</item>
        <item name="itemTextColor">@color/menu_selector_color</item>
        <item name="android:background">@color/media_background</item>
    </style>

    <style name="BottomNavigationMenuText">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/media_text_color</item>
        <item name="android:textSize">@dimen/bottom_nav_menu_text</item>
    </style>

    <style name="NewPlaylistET" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text</item>
        <item name="android:textColor">#1A1B22</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeColor">@color/et_selector</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/et_selector</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">true</item>
        <item name="boxCornerRadiusBottomEnd">3.5dp</item>
        <item name="boxCornerRadiusBottomStart">3.5dp</item>
        <item name="boxCornerRadiusTopEnd">3.5dp</item>
        <item name="boxCornerRadiusTopStart">3.5dp</item>
    </style>

    <style name="CreateButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>